@model ProjektZeiterfassung.ViewModels.MitarbeiterViewModel
@{
    ViewData["Title"] = "Edit Employee";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2>Edit Employee</h2>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="MitarbeiterNr" class="control-label">Employee Number</label>
                                <input asp-for="MitarbeiterNr" class="form-control" readonly />
                                <small class="form-text text-muted">The employee number cannot be changed.</small>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">Last Name</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Vorname" class="control-label">First Name</label>
                                <input asp-for="Vorname" class="form-control" />
                                <span asp-validation-for="Vorname" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input asp-for="Inactive" class="form-check-input" />
                            <label asp-for="Inactive" class="form-check-label">Inactive Employee</label>
                        </div>
                        <small class="form-text text-muted">Inactive employees won't appear in selection
                            dropdowns.</small>
                    </div>
                    <div class="form-group d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Back to Overview</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}