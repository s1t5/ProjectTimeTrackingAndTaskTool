@model ProjektZeiterfassung.Models.Mitarbeiter
@{
    ViewData["Title"] = "Employee Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2>Employee Details</h2>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <strong>Employee Number:</strong>
                            <p class="lead">@Model.MitarbeiterNr</p>
                        </div>
                        <div class="mb-3">
                            <strong>Last Name:</strong>
                            <p class="lead">@Model.Name</p>
                        </div>
                        <div class="mb-3">
                            <strong>First Name:</strong>
                            <p class="lead">@Model.Vorname</p>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Back to Overview</a>
                    <a asp-action="Edit" asp-route-id="@Model.MitarbeiterNr" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>