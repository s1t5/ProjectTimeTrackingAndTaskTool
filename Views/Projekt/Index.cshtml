@model IEnumerable<ProjektZeiterfassung.Models.Projekt>

@{
    ViewData["Title"] = "Projects";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>Projects</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus"></i> Create New Project
        </a>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Project Number</th>
                            <th>Project Name</th>
                            <th>Customer</th>
                            <th>Included Hours</th>
                            <th>Additional Minutes</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Projektnummer</td>
                                <td>@item.Projektbezeichnung</td>
                                <td>@item.Kunde?.Kundenname</td>
                                <td>@item.InkludierteStunden</td>
                                <td>@item.NachberechneteMinuten</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Projektnummer" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Projektnummer" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No projects found.</p>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Zeiterfassung" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Time Tracking
    </a>
</div>