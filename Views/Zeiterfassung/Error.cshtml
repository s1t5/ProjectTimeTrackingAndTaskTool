@model string

@{
    ViewData["Title"] = "Error";
}

<div class="card mt-4">
    <div class="card-header bg-danger text-white">
        <h2><i class="bi bi-exclamation-triangle"></i> Error</h2>
    </div>
    <div class="card-body">
        <div class="alert alert-danger">
            @(Model ?? "An unknown error occurred.")
        </div>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-primary">Back to Time Tracking</a>
        </div>
    </div>
</div>