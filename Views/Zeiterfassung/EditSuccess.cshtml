@model int

@{
    ViewData["Title"] = "Updated Successfully";
}

<div class="card mt-4">
    <div class="card-header bg-success text-white">
        <h2><i class="bi bi-check-circle"></i> Activity Updated Successfully</h2>
    </div>
    <div class="card-body">
        <p>The activity with ID <strong>@Model</strong> has been updated successfully.</p>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-primary">Back to Time Tracking</a>
        </div>
    </div>
</div>