@model IEnumerable<ProjektZeiterfassung.Models.Kunde>

@{
    ViewData["Title"] = "Customers";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>Customers</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus"></i> Create New Customer
        </a>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Customer Number</th>
                            <th>Customer Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Kundennr</td>
                                <td>@item.Kundenname</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Kundennr" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Kundennr" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No customers found.</p>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Zeiterfassung" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Time Tracking
    </a>
</div>