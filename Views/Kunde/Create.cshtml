@model ProjektZeiterfassung.ViewModels.KundeViewModel

@{
    ViewData["Title"] = "Create New Customer";
}

<div class="card">
    <div class="card-header">
        <h2>Create New Customer</h2>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Kundennr" class="control-label">Customer Number</label>
                <input asp-for="Kundennr" class="form-control" />
                <span asp-validation-for="Kundennr" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Kundenname" class="control-label">Customer Name</label>
                <input asp-for="Kundenname" class="form-control" />
                <span asp-validation-for="Kundenname" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}